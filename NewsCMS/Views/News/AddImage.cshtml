@model NewsCMS.Models.News

@{
    ViewBag.Title = "AddImage";
}


<div class="col-lg-12">
    <h3>@Model.Title</h3>
</div>


  <div id="uploader">
    <p>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
</div>



