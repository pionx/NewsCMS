<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        
        <link href="~/Content/themes/plupload/jquery.ui.plupload.css" rel="stylesheet" />
        <link href="~/Content/themes/plupload/jquery-ui.min.css" rel="stylesheet" />

        <link type="text/css" rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/themes/smoothness/jquery-ui.min.css" media="screen" />
<link type="text/css" rel="stylesheet" href="http://www.plupload.com/plupload/js/jquery.ui.plupload/css/jquery.ui.plupload.css" media="screen" />

        <style>
            body {
                border-top: 0;
            }
        </style>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("News", "Index", "News")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (@ViewBag.userLogged == true) {
                                <li>@Html.ActionLink("All News", "Index", "News")</li>@*
                                <li>@Html.ActionLink("Create News", "Create", "News")</li>*@
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                
                @RenderBody()
            </section>
            
        </div>
        @*<footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>*@
        
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        
        <script src="~/Scripts/plupload/jquery-ui.min.js"></script>
        <script src="~/Scripts/plupload/plupload.full.min.js"></script>
        <script src="~/Scripts/plupload/jquery.ui.plupload.min.js"></script>
    </body>
</html>
